{
	// build from dockerfile
	"build": {
		"dockerfile": "Dockerfile",
		"context": "../.."
	},
	// specify run arguments
	"runArgs": [
		"--dns=8.8.8.8" // for some reason DNS doesn't work right unless we explicitly name a DNS server
	],
	// mount entire sites_v2 directory, so we can access global config and shared DB
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspace/${localWorkspaceFolderBasename},type=bind",
	"workspaceFolder": "/workspace/${localWorkspaceFolderBasename}",
	// post-install commands
	"postCreateCommand": {
		"composer": "composer install && composer run migrate",
		"cronSetup": "crontab -l | { cat; echo \"*/10 * * * * /usr/bin/php /workspace/${localWorkspaceFolderBasename}/scripts/cron-run.php\"; } | crontab -"
	},
	"postStartCommand": "cron",
	// volumes
	"mounts": [
		"source=${localWorkspaceFolderBasename}-vendor,target=${containerWorkspaceFolder}/vendor,type=volume",
		"source=${localWorkspaceFolderBasename}-cache,target=${containerWorkspaceFolder}/cache,type=volume",
		"source=${localWorkspaceFolderBasename}-files,target=${containerWorkspaceFolder}/web/files,type=volume",
		"source=${localWorkspaceFolder}/storage,target=${containerWorkspaceFolder}/storage,type=bind",
		"source=${localWorkspaceFolder}/../global,target=/workspace/global,type=bind"
	],
	// specify extensions that we want
	"customizations": {
		"vscode": {
			"extensions": [
				"xdebug.php-debug",
				"recca0120.vscode-phpunit",
				"bmewburn.vscode-intelephense-client",
				"rifi2k.format-html-in-php",
				"michelemelluso.code-beautifier",
				"yzhang.markdown-all-in-one",
				"ecmel.vscode-html-css",
				"swordev.phpstan",
				"redhat.vscode-yaml",
				"redhat.vscode-xml",
				"Gruntfuggly.todo-tree",
				"mrmlnc.vscode-scss",
				"gencer.html-slim-scss-css-class-completion"
			]
		}
	}
}